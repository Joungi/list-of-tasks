<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TaskList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/paiva1</item>
        <item name="colorPrimaryVariant">@color/paiva2</item>
        <item name="colorOnPrimary">@color/paiva3</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/paiva5</item>
        <item name="colorSecondaryVariant">@color/paiva4</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance" parent="Theme.AppCompat.DayNight">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
</resources>